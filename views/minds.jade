doctype html
html
	head
		title= title
		<script src="/javascripts/jquery/jquery.min.js"></script>
		<script src="/javascripts/bootstrap/js/bootstrap.min.js"></script>
		<link rel="stylesheet" href="/javascripts/bootstrap/css/bootstrap-theme.css"/>
		<link rel="stylesheet" href="/javascripts/bootstrap/css/bootstrap.min.css"/>
	body
		div( class="container theme-showcase" )
			div.jumbotron
				h1 WebMind <small>随时随地、所思所想</small>
			div.page-header
				h2 所有思想
					a( href="/minds/add" ) <small>添加思想</small>
			div.row
				div.col-sm-1
				div.col-sm-8
					table.table.table-hover
						tbody
							tr
								th 序号 
								th 名称
								th 描述
								th 创建时间
								th 最后一次修改时间
								th 操作
							each val,index in mindRows
								tr
									td=index+1
									td=val.name
									td=val.context
									td=val.create_time
									td=val.modify_time
									td
										a( href="/minds/modify/#{val.id}" ) 修改
										a( href="/minds/del/#{val.id}" ) 删除 
